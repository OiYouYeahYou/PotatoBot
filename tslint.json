{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"no-unused-locals": true,
		"quotemark": {
			"options": [ "single", "avoid-escape" ]
		},
		"no-unused-expression": true,
		"prefer-const": false,
		"indent": {
			"options": [ "tabs" ]
		},
		"no-var-keyword": false,
		"curly": false,
		"no-console": false,
		"one-variable-per-declaration": false,
		"trailing-comma": false,
		"arrow-parens": false,
		"one-line": {
			"options": [
				"check-open-brace",
				"check-whitespace"
			]
		},
		"no-string-throw": false,
		"comment-format": false,
		"align": false
	},
	"rulesDirectory": []
}
